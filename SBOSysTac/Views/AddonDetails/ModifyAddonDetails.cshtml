
@using SBOSysTac.ViewModel
@model AddonsViewModel


@using (Html.BeginForm("ModifyAddonDetails", "AddonDetails", FormMethod.Post, new { @class = "form-horizontal", @id = "formmodifyaddons", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    @Html.HiddenFor(model =>model.addonId)

    <div class="box-body">

        <div class="form-group">
            <label class="control-label col-sm-3 required">Addons Cat.</label>
            <div class="col-sm-7">
                @Html.DropDownListFor(model => model.addoncatId, Model.addonscatselectlist, "----- Select Add ons Category   -------", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.addoncatId, null, new { @class = "text-danger" })
            </div>

        </div>
        
        <div class="form-group">
            @Html.LabelFor(model => model.deptId, new {@class = "col-sm-3 control-label required"})

            <div class="col-sm-7">
                @Html.DropDownListFor(model=> model.deptId, Model.deptincharge_list, "------- Select Department -------", new {@class = "form-control"})
                @Html.ValidationMessageFor(model => model.deptId, null, new { @class = "text-danger" })
            </div>

        </div>

        <div class="form-group">
            <label class="control-label col-sm-3 required">Addons Discription</label>
            <div class="col-sm-7">
                @Html.TextBoxFor(model => model.AddonsDescription, new { @class = "form-control", @data_toggle = "popover", @placeholder = "Enter addons discription", @autofocus = "autofocus" })
                @Html.ValidationMessageFor(model => model.AddonsDescription, null, new { @class = "text-danger" })
            </div>

        </div>

        <div class="form-group">
            <label class="control-label col-sm-3">Addons  Unit</label>
            <div class="col-sm-3">
                @Html.TextBoxFor(model => model.Unit, new { @class = "form-control", @data_toggle = "popover", @placeholder = "Enter Unit", @id = "txtUnit" })

            </div>


        </div>

        <div class="form-group">
            <label class="control-label col-sm-3">Addons Amount:</label>
            <div class="col-sm-5">
                @Html.TextBoxFor(model => model.AddonAmount, new { @class = "form-control text-right", @data_toggle = "popover", @placeholder = "0.00", @id = "txtaddonAmt" })

            </div>


        </div>



    </div>

    <div class="box-footer" style="padding-left: 0px;">
        <div class="col-md-5 col-sm-offset-3">

            @*<input type="submit" value="Register " title="Register" id="btn_regCourse" class="btn btn-success btn-sm"/>*@
            <button class="btn bg-olive btn-flat" type="submit" id="btn_modifyAddons">Modify Addons</button>
            <button class="btn bg-purple btn-flat"type="button" id="btn_canceladdondetails">Cancel</button>

        </div>
    </div>

}
