@using SBOSysTac.ViewModel
@model UserProfileViewModel


<!-- Main content -->
<section class="content">
    <!-- Default box -->
    <div class="box">
      

        <div class="box-header with-border">
            <h3 class="box-title">User Profile Information</h3>

        </div>

        <div class="box-body">

            <!-- Custom Tabs -->
            <div class="nav-tabs-custom">
                <ul class="nav nav-tabs">
                    <li class="active"><a href="#tab_1" data-toggle="tab"><i class="fa fa-user-secret"></i> Personal Info</a></li>

                    <li><a href="#tab_2" data-toggle="tab"> <i class="fa fa-address-card"></i>  Account Security</a></li>
                    @*<li><a href="#tab_3" data-toggle="tab">Log Details</a></li>*@
                    
                    @Html.HiddenFor(m=>m.uId);
                   
                    @*<li class="pull-right"><a href="#" class="text-muted"><i class="fa fa-gear"></i></a></li>*@
                </ul>
                <div class="tab-content">
                    <div class="tab-pane active" id="tab_1">
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="control-label col-sm-4">Username:</div> <span class="bookdetails">@Html.DisplayFor(m=>m.username)</span>
                                <br />
                                <div class="control-label col-sm-4">Fullname :</div> <span class="bookdetails">@Html.DisplayFor(m => m.fullname)</span>
                                <br />
                                <div class="control-label col-sm-4">Email Address:</div> <span class="bookdetails">@Html.DisplayFor(m => m.emailAdd)</span>
                                <br />
                                <div class="control-label col-sm-4">Role(s):</div> <span class="bookdetails">@Html.DisplayFor(m=>m.roles)</span>
                            </div>

                        </div>
                            
                    </div>

                    <!-- /.tab-pane -->
                    <div class="tab-pane" id="tab_2">
                            @*@Html.HiddenFor(m=>m.UserUpdatePassViewModel.userId)*@
                        <div class="register-box-body" id="usersecurity">
                          
                            @{
                                Html.RenderAction("ChangePassPartialView","Account",new {user_id=Model.uId});
                            }
       
                        
                        </div>


                    </div>
                    <!-- /.tab-pane -->
                    

                    <div class="tab-pane" id="tab_3">
                                    
                        <div class="register-box-body">
                            <div class="row">
                                    
                                </div>
                            </div>
                        </div>

                    </div>
                    <!-- /.tab-pane -->
                </div>
                <!-- /.tab-content -->
            </div>
            <!-- nav-tabs-custom -->

       

        <div class="box-footer">
            @*Footer*@
        </div>
        <!-- /.box-footer-->
    </div>
    <!-- /.box -->
</section>
<!-- /.content -->


