@model SBOSys.ViewModel.CourseCategoryViewModel


<section class="content">
    <!-- Default box -->
    <div class="box">
        <div class="box-header with-border">
            
            <h3 class="box-title">Course Category Details</h3>

        </div>
        @*<div class="row top-buffer"></div>*@
        @using (Html.BeginForm("ModifyCourse", "Course", FormMethod.Post, new {@class = "form-horizontal", @id = "create_course"}))
        {
            <div class="box-body">


                @Html.AntiForgeryToken()

                @Html.ValidationSummary(true, "", new {@class = "text-danger"})

                <div class="form-group">
                    @Html.LabelFor(m => m.Coursename, new {@class = "col-sm-2 control-label required"})
                    <div class="col-sm-6">
                        @Html.TextBoxFor(m => m.Coursename, new {@class = "form-control", @data_toggle = "popover", @placeholder = "Course"})
                    </div>
                    <div class="col-sm-3">
                        @Html.ValidationMessageFor(m => m.Coursename, null, new {@class = "text-danger"})
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Note, new {@class = "col-sm-2 control-label"})
                    <div class="col-sm-6">
                        @Html.TextAreaFor(m => m.Note, new {@class = "form-control", @data_toggle = "popover", @placeholder = "Note", rows = "3"})
                    </div>

                </div>

                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <div class="checkbox">

                            <label>
                                @Html.CheckBoxFor(model => model.Main_Bol)
                                This is a main course
                            </label>


                        </div>
                    </div>

                </div>

                @Html.HiddenFor(m => m.CourserId)

 
            </div>

            <div class="box-footer" style="padding-left: 0px;">
                <div class="col-md-5 col-sm-offset-2">
               
                    @*<input type="submit" value="Register " title="Register" id="btn_regCourse" class="btn btn-success btn-sm"/>*@
                    <button class="btn bg-olive btn-flat" type="submit" id="btn_updateCourse">Update Course</button>
                    <button class="btn bg-purple btn-flat" type="button" id="cancel" onclick="window.history.back()">Cancel</button>

                </div>
            </div>
            <!-- /.box-footer-->
        }
    </div>
    <!-- /.box -->
</section>
<!-- /.content -->

@section scripts{
   
    @Scripts.Render("~/Scripts/js_course.js")

}