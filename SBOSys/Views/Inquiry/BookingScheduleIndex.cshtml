@section Styles
{
    @Styles.Render("~/Content/bower_components/datatablesPrint/css/datatables_print.min.css")
}


<section class="content">
    
    <div class="pad margin no-print" style="padding-left: 0px !important; padding-right: 0px !important; margin-bottom: 0px; padding-bottom: 0px;">
        <div class="callout callout-info" style="margin-bottom: 15px;">
            <h4><i class="fa fa-info" style="padding: 0px; margin: 0px;"></i> Print Booking Schedules </h4>

        </div>
    </div>
    
    <div class="row">
        <div class="col-md-10">
            <div class="form-inline" style="margin-left: 10px;">
                <label>Filter Date </label>
                <div class="form-group">

                    <input type="text" id="start_date" class="form-control" placeholder="Date Start">
                </div>
                <div class="form-group">

                    <input type="text" id="end_date" class="form-control" placeholder="Date End">
                </div>
                <label style="margin-right: 20px; margin-left: 10px;">@Html.RadioButton("optfilter", "all", new { @checked = "checked" }) All </label>
                <label style="margin-right: 20px; margin-left: 10px;">@Html.RadioButton("optfilter", "serve") Serve </label>
                <label  style="margin-right: 20px; margin-left: 10px;">@Html.RadioButton("optfilter", "unserve") Unserve </label>
                <button type="button" class="btn btn-primary" id="btnFilterschedule"><i class="fa fa-search" aria-hidden="true"></i> Filter</button>
            </div>
           
        </div>
    </div>
    
    <div class="row" style="margin-top: 20px;">
        <div class="col-xs-12">

            <div class="box-body table-responsive no-padding" id="filteredRecord">
                

            </div>
        </div>
    </div>

</section>


<div id="spinn-loader">
    Loading data Pls. wait....
</div>


@section scripts
{
    
    @Scripts.Render("~/bundles/PrintDatatable")

    <script type="text/javascript">

        var bookingscheduleUrl = {
            url_loadbookingSheduleFilterbyDate: "@Url.Action("GetBookingScheduleFilter", "Inquiry")",
            url_loadbookingscheduleDataTable:"@Url.Action("GetBookingScheduleDataTableList", "Inquiry")"


        }



    </script>
    
   
    @Scripts.Render("~/Scripts/js_printbookingschedule.js")
}

